<?xml version="1.0" encoding="utf-8" ?>
<resources>
    
    <!-- Applies to all views -->
    <styleable name="UIView">
        
        <!-- HLMLayout provided properties -->
        <attr name="helium:layout_width" format="layout_param" property_alias="hlm_layoutWidth" />
        <attr name="helium:layout_height" format="layout_param" property_alias="hlm_layoutHeight" />
        <attr name="helium:layout_gravity" format="gravity" property_alias="hlm_layoutGravity" />
        <attr name="helium:layout_weight" format="cgfloat" property_alias="hlm_layoutWeight" />
        <attr name="helium:layout" format="layout_manager" property_alias="hlm_layoutManager" />
        <attr name="helium:min_width" format="cgfloat" property_alias="hlm_minWidth" />
        <attr name="helium:min_height" format="cgfloat" property_alias="hlm_minHeight" />
        <attr name="helium:padding" format="edge_insets" property_alias="hlm_padding" />
        <attr name="helium:padding_left" format="cgfloat" property_alias="hlm_paddingLeft" />
        <attr name="helium:padding_top" format="cgfloat" property_alias="hlm_paddingTop" />
        <attr name="helium:padding_right" format="cgfloat" property_alias="hlm_paddingRight" />
        <attr name="helium:padding_bottom" format="cgfloat" property_alias="hlm_paddingBottom" />
        <attr name="helium:margins" format="edge_insets" property_alias="hlm_margins" />
        <attr name="helium:margin_left" format="cgfloat" property_alias="hlm_marginLeft" />
        <attr name="helium:margin_top" format="cgfloat" property_alias="hlm_marginTop" />
        <attr name="helium:margin_right" format="cgfloat" property_alias="hlm_marginRight" />
        <attr name="helium:margin_bottom" format="cgfloat" property_alias="hlm_marginBottom" />
        <attr name="helium:orientation" format="layout_orientation" property_alias="hlm_orientation" />
        <attr name="helium:baseline_aligned" format="bool" property_alias="hlm_baselineAligned" />
        <attr name="helium:baseline_child_index" format="integer" property_alias="hlm_baselineAlignedChildIndex" />
        <attr name="helium:weight_sum" format="cgfloat" property_alias="hlm_weightSum" />
        <attr name="helium:gravity" format="gravity" property_alias="hlm_gravity" />
        <attr name="helium:overrides_layout_guides" format="bool" property_alias="hlm_overridesLayoutGuides" />
        
        
        <!-- Default properties -->
        <attr name="tag" format="string_hash" />
        <attr name="user_interaction_enabled" format="bool" />


        <!-- UIViewGeometry -->
        <!-- <attr name="transform" format="cgaffinetransform" />  @todo: Unsupported format: CGAffineTransform -->
        <attr name="content_scale_factor" format="cgfloat" />
        <attr name="multiple_touch_enabled" format="bool" />
        <attr name="exclusive_touch" format="bool" />
        <attr name="autoresizes_subviews" format="bool" />
        <!-- <attr name="autoresizing_mask" format="view_autoresizing" />  @todo: Unsupported format: UIViewAutoresizing -->


        <!-- UIViewRendering -->
        <attr name="clips_to_bounds" format="bool" />
        <attr name="background_color" format="color" />
        <attr name="alpha" format="cgfloat" />
        <attr name="opaque" format="bool" />
        <attr name="clears_context_before_drawing" format="bool" />
        <attr name="hidden" format="bool" />
        <attr name="content_mode" format="content_mode" />
        <attr name="tint_color" format="color" />
        <!-- <attr name="tint_adjustment_mode" format="tint_adjustment_mode" />  @todo: Unsupported format: UIViewTintAdjustmentMode -->

    </styleable>
    
    <!-- Applies to UILabel and all of its subclasses -->
    <styleable name="UILabel">
        
        <!-- HLMLayout provided properties -->
        <attr name="helium:text_size" format="cgfloat" property_alias="hlm_textSize" />
        
        
        <!-- Default properties -->
        <attr name="text" format="string" />
        <attr name="font" format="font" />
        <attr name="text_color" format="color" />
        <attr name="shadow_color" format="color" />
        <!-- <attr name="shadow_offset" format="cgsize" />  @todo: Unsupported format: CGSize -->
        <attr name="text_alignment" format="text_alignment" />
        <!-- <attr name="line_break_mode" format="line_break_mode" />  @todo: Unsupported format: NSLineBreakMode -->
        <attr name="higlighted_text_color" format="color" />
        <attr name="highlighted" format="bool" />
        <attr name="enabled" format="bool" />
        <attr name="number_of_lines" format="integer" />
        <attr name="adjusts_font_size_to_fit_width" format="bool" />
        <attr name="adjusts_letter_spacing_to_fit_width" format="bool" />
        <attr name="minimum_font_size" format="cgfloat" />
        <!-- <attr name="baseline_adjustment" format="baseline_adjustment" />  @todo: Unsupported format: UIBaselineAdjustment -->
        <attr name="minimum_scale_factor" format="cgfloat" />

    </styleable>
    
    <!-- Applies to UIImageView and all of its subclasses -->
    <styleable name="UIImageView">
        
        <!-- HLMLayout provided properties -->
        <attr name="helium:image" format="image" property_alias="hlm_image" />
        <attr name="helium:highlighted_image" format="image" property_alias="hlm_highlightedImage" />
        <attr name="helium:image_rendering_mode" format="image_rendering_mode" property_alias="hlm_imageRenderingMode" />
        
        
        <!-- Default properties -->
        <attr name="highlighted" format="bool" />
        <!-- @todo: Maybe explore how useful implementing the animation properties would be -->

    </styleable>
    
    <!-- Applies to UIButton and all of its subclasses -->
    <styleable name="UIButton">
        
        <!-- HLMLayout provided properties -->
        <!-- <attr name="helium:button_type" format="button_type" />  @todo: Work out a way to suppport UIButtonType -->
        <!-- @todo: Need to revisit this and add the ability to edit title label -->
        <attr name="helium:highlighted_background_color" format="color" property_alias="hlm_highlightedBackgroundColor" />
        
        
        <!-- Default properties -->
        <attr name="content_edge_insets" format="edge_insets" />
        <attr name="title_edge_insets" format="edge_insets" />
        <attr name="reverses_title_shadow_when_highlighted" format="bool" />
        <attr name="image_edge_insets" format="edge_insets" />
        <attr name="adjusts_image_when_highlighted" format="bool" />
        <attr name="adjusts_image_when_disabled" format="bool" />
        <attr name="shows_touch_when_highlighted" format="bool" />

    </styleable>
    
    <!-- Applies to UITextField and all of its subclasses -->
    <styleable name="UITextField">
        
        <!-- Default properties -->
        <attr name="text" format="string" />
        <attr name="text_color" format="color" />
        <attr name="font" format="font" />
        <attr name="text_alignment" format="text_alignment" />
        <!-- <attr name="border_style" format="border_style" />  @todo: Unsupported format: UITextBorderStyle -->
        <attr name="placeholder" format="string" />
        <attr name="clears_on_begin_editing" format="bool" />
        <attr name="adjusts_font_size_to_fit_width" format="bool" />
        <attr name="minimum_font_size" format="cgfloat" />
        <attr name="background" format="image" />
        <attr name="disabled_background" format="image" />
        <attr name="allows_editing_text_attributes" format="bool" />
        <!-- <attr name="clear_button_mode" format="text_field_mode" />  @todo: Unsupported format: UITextFieldViewMode -->
        <!-- <attr name="left_view_mode" format="text_field_mode" />  @todo: Unsupported format: UITextFieldViewMode -->
        <!-- <attr name="right_view_mode" format="text_field_mode" />  @todo: Unsupported format: UITextFieldViewMode -->
        <!-- @todo: Should views be allowed to be inflated to fill properties ie left_view="@view/some_left_view" ? -->
        <attr name="clears_on_insertion" format="bool" />

    </styleable>
    
    <!-- Applies to UIScrollView and all of its subclasses -->
    <styleable name="UIScrollView">
        
        <!-- Default properties -->
        <!-- <attr name="content_offset" format="cgpoint" />  @todo: Unsupported format: CGPoint (Thinks it is, but it isn't) -->
        <!-- <attr name="content_inset" format="edge_insets" />  @todo: Unsupported feature: contentInset is used in HLMScrollView -->
        <attr name="directional_lock_enabled" format="bool" />
        <attr name="bounces" format="bool" />
        <attr name="always_bounce_vertical" format="bool" />
        <attr name="always_bounce_horizontal" format="bool" />
        <attr name="paging_enabled" format="bool" />
        <attr name="scroll_enabled" format="bool" />
        <attr name="shows_horizontal_scroll_indicator" format="bool" />
        <attr name="shows_vertical_scroll_indicator" format="bool" />
        <!-- <attr name="scroll_indicator_insets" format="edge_insets" />  @todo: Unsupported feature: contentInset is used in HLMScrollView -->
        <!-- <attr name="indicator_style" format="scroll_view_indicator_style" />  @todo: Unsupported feature: UIScrollViewIndicatorStyle -->
        <attr name="deceleration_rate" format="cgfloat" />
        <attr name="delays_content_touches" format="bool" />
        <attr name="can_cancel_content_touches" format="bool" />
        <attr name="minimum_zoom_scale" format="cgfloat" />
        <attr name="maximum_zoom_scale" format="cgfloat" />
        <attr name="zoom_scale" format="cgfloat" />
        <attr name="bounces_zoom" format="bool" />
        <attr name="scrolls_to_top" format="bool" />
        <!-- <attr name="keyboard_dismiss_mode" format="scroll_view_keyboard_dismiss_mode" />  @todo: Unsupported feature: UIScrollViewKeyboardDismissMode-->

    </styleable>
    
</resources>