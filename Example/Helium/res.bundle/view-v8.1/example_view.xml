<?xml version="1.0" encoding="utf-8" ?>
<UIView
    tag="example"
    layout_width="match_parent"
    layout_height="match_parent"
    layout="frame"
    padding="10"
    background_color="#FFF">
    <UIView
        layout_width="match_parent"
        layout_height="match_parent"
        layout_gravity="center"
        orientation="horizontal"
        min_height="200"
        layout="linear"
        padding="10"
        background_color="#000">
        <UIView
            layout_width="100"
            layout_height="match_parent"
            layout="linear"
            orientation="vertical">
            <UIView
                layout_width="match_parent"
                layout_height="100"
                background_color="#F8D57A" />
            <UIView
                layout_width="match_parent"
                layout_height="0"
                layout_weight="1"
                margin_top="10"
                background_color="#FFF" />
        </UIView>
        <UIView
            layout_width="0"
            layout_height="match_parent"
            layout_weight="1"
            margin_left="10"
            layout="linear"
            orientation="vertical">
            <UIView
                layout_width="match_parent"
                layout_height="0"
                layout_weight="1"
                background_color="#D5342F" />
            <UIView
                layout_width="match_parent"
                layout_height="0"
                layout_weight="0.5"
                margin_top="10"
                background_color="#FFF" />
            <UIView
                layout_width="match_parent"
                layout_height="0"
                layout_weight="0.5"
                margin_top="10"
                background_color="#FFF" />
            <UIView
                layout_width="match_parent"
                layout_height="0"
                layout_weight="1"
                layout="linear"
                orientation="horizontal"
                margin_top="10"
                background_color="#000">
                <UIView
                    layout_width="50"
                    layout_height="match_parent"
                    background_color="#000" />
                <UIView
                    layout_width="0"
                    layout_height="match_parent"
                    layout_weight="1"
                    margin_left="10"
                    background_color="#152FA8" />
            </UIView>
        </UIView>
    </UIView>
</UIView>